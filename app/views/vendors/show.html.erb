<% content_for :title, "Vendor Profile" %>
<div class="container-fluid" style="margin-top:1em;">
  <div class="row">
    <div class="col-md-12">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h2 class="heading_text">Vendor Complete Profile</h2></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-top:1em;padding-bottom:1em; background-color: rgba(26,188,156,0.7); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12 login_signup_panel">
            <br>
            <div class="row">
              <div class="col-md-3 col-xs-12">
                <% if @vendor.image? %>
                    <%= image_tag(@vendor.image, {style: "width:13em;height:13em;",class: "my_img img-responsive img-thumbnail img-circle",alt: "Vendor Profile Image"}) %>
                <%else%>
                    <%= image_tag("user.png", {style: "width:13em;height:13em;",class: "my_img img-responsive img-thumbnail img-circle",alt: "Vendor Profile Image"}) %>
                <%end%>
              </div>
              <div class="col-md-9 col-xs-12">
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">ID: </label>
                    <label class="value"><%= @vendor.id%></label>
                  </div>
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Email: </label>
                    <label class="value"><%= @vendor.email%></label>
                  </div>
                </div>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Regsitered At: </label>
                    <% @str = @vendor.created_at.to_s %>
                    <% @str = @str.tr('UTC', '')%>
                    <label class="value"><%= @str%></label>
                  </div>
                </div>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Name: </label>
                    <label class="value"><%= @vendor.name%></label>
                  </div>
                  <div class="col-md-12 col-xs-12">
                    <label class="key">CNIC: </label>
                    <label class="value"><%= @vendor.cnic%></label>
                  </div>
                </div>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Number: </label>
                    <label class="value"><%= @vendor.number%></label>
                  </div>
                  <div class="col-md-6 col-xs-12">
                  </div>
                </div>
                <hr>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Total Marriage Halls: </label>
                    <label class="value"><%= @vendor.hall_managers.count%></label>
                  </div>
                </div>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Total Decorator Profiles: </label>
                    <label class="value"><%= @vendor.decorators.count%></label>
                  </div>
                </div>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Total Marquee Profiles: </label>
                    <label class="value"><%= @vendor.marquees.count%></label>
                  </div>
                </div>
                <div class="row" style="margin:0.5em;">
                  <div class="col-md-12 col-xs-12">
                    <label class="key">Total Photographer Profiles: </label>
                    <label class="value"><%= @vendor.photographers.count%></label>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
                <%= render 'halls' %>
                <%= render 'decorator' %>
                <%= render 'marquee' %>
                <%= render 'photographer' %>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-5 col-xs-12"></div>
          <div class="col-md-2 col-xs-12">
            <center>
              <%= link_to "Back", vendors_path, class:"btn btn-info", style:"color:#FFFFFF;font-weight:bold;font-family: 'Merriweather', serif;"%>
            </center>
          </div>
          <div class="col-md-5 col-xs-12"></div>
        </div>
      </div>
    </div>
  </div>
</div>
